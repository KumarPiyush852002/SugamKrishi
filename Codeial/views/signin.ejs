<link rel="stylesheet" href="/css/signin.css">
<h1 style="text-align: center;">SIGNin</h1>

<form action="/user/create-session" method="post" id="form">
    <div>
        <label for="username">
            <p>Email: &nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="username" id="username" placeholder="Enter Username/Email"></p>
        </label>
        <label for="password">
            <p>Password: <input type="password" name="password" id="password" placeholder="Enter your password"></p>
        </label>
    </div>
    <div>
        <button type="submit">Submit Form</button>
    </div>
</form>