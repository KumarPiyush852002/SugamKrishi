<link rel="stylesheet" href="/css/signup.css">
<h1 style="text-align: center;">SIGNup</h1>
<form action="/user/record" method="post">
    <div id="form">
        <label for="name">
            <p>Name: &nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="name" placeholder="Enter your full name"></p>
        </label>
        <label for="username">
            <p>Email: &nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="username" id="username" placeholder="Enter Username/Email"></p>
        </label>
        <label for="password">
            <p>Password: <input type="password" name="password" id="password" placeholder="Enter your password"></p>
        </label>
        <label for="cnfpassword">
            <p style="width: 95%;">Confirm Password: <input type="password" name="cnfpassword" id="cnfpassword" placeholder="Enter your confirm password"></p>
        </label>
    </div>
    <div>
        <button type="submit">Submit Form</button>
    </div>
</form>